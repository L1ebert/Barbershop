<Page x:Class="Barbershop.PageMain.PageAddManufacturer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Barbershop.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавить производителя">

    <Grid>
        <Image Source="/Image/SK.png" Stretch="Fill"/>

        <Button Content="Добавить"
                Name="AddManufacturerBtn" 
                HorizontalAlignment="Left" 
                Margin="244,237,0,0"
                FontSize="20"
                VerticalAlignment="Top" 
                Width="120" Height="39"
                Click="AddManufacturerBtn_Click"/>

        <TextBox Name="NameManufacturerTb" 
                 HorizontalAlignment="Left"
                 Height="50" 
                 FontSize="25"
                 Margin="116,79,0,0"
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top"
                 Width="394"/>

        <TextBlock Text="Введите название производителя"
                   HorizontalAlignment="Left" 
                   Margin="116,48,0,0" 
                   FontSize="20"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"/>
    </Grid>
</Page>
